<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:rowCount="6"
    android:padding="10dp">

    <!-- TextView to display input and result -->
    <TextView
        android:id="@+id/textViewInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_columnSpan="4"
        android:gravity="end"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:text="0"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:layout_column="0"
        android:layout_row="1"
        android:backgroundTint="#505050"  />


    <Button
        android:id="@+id/buttonPlusMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+/-"
        android:layout_column="1"
        android:layout_row="1"
        android:backgroundTint="#505050"/>

    <Button
        android:id="@+id/buttonPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        android:layout_column="2"
        android:layout_row="1"
        android:backgroundTint="#505050"/>

    <Button
        android:id="@+id/buttonDivide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:layout_column="3"
        android:layout_row="1"
        android:backgroundTint="#FF9500"/>

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:layout_column="0"
        android:layout_row="2"
        android:backgroundTint="#1C1C1C"/>

    <!-- Add buttons for digits 6, 7, 8, 9, 0 -->

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:layout_column="1"
        android:layout_row="2"
        android:backgroundTint="#1C1C1C"/>

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:layout_column="2"
        android:layout_row="2"
        android:backgroundTint="#1C1C1C"/>

    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:layout_column="3"
        android:layout_row="2"
        android:backgroundTint="#FF9500"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:layout_column="0"
        android:layout_row="3"
        android:backgroundTint="#1C1C1C"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:layout_column="1"
        android:layout_row="3"
        android:backgroundTint="#1C1C1C"/>

    <!-- Add buttons for other operations like addition, subtraction, multiplication, division, equals, decimal point -->

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:layout_column="2"
        android:layout_row="3"
        android:backgroundTint="#1C1C1C"/>

    <Button
        android:id="@+id/buttonSubtract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_column="3"
        android:layout_row="3"
        android:backgroundTint="#FF9500"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_column="0"
        android:layout_row="4"
        android:backgroundTint="#1C1C1C"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:layout_column="1"
        android:layout_row="4"
        android:backgroundTint="#1C1C1C"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:layout_column="2"
        android:layout_row="4"
        android:backgroundTint="#1C1C1C"/>

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:layout_column="3"
        android:layout_row="4"
        android:backgroundTint="#FF9500"/>

    <Button
        android:id="@+id/button0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_column="0"
        android:layout_row="5"
        android:layout_columnSpan="2"
        android:layout_columnWeight="2"
        android:gravity="center"
        android:backgroundTint="#1C1C1C"/>

    <Button
        android:id="@+id/buttonDot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:layout_column="2"
        android:layout_row="5"
        android:backgroundTint="#1C1C1C"/>

    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:layout_column="3"
        android:layout_row="5"
        android:backgroundTint="#FF9500"/>

</GridLayout>
